    <!--And username like "%"#{username}"%"-->
    <!--</if>-->
    <!--<if test="name != null">-->
    <!--AND name=#{name}-->
    <!--</if>-->
    <!--</select>-->

    <!--方法二，通过where-->
    <select id="findByCondition" resultMap="Users" parameterType="user">
        -- 关联sql片段
        -- include包含
        -- refid 关联的sql片段的id
        <include refid="select_user"></include>
        -- select * from users
        <where>
            <if test="username != null">
                And username like "%"#{username}"%"
            </if>
            <if test="name != null">
                AND name=#{name}
            </if>
        </where>
    </select>

    <delete id="delByArry" parameterType="integer[]">
        delete from users where
--       foreach循环标签
--               collection：参数据类型list，array
--                open ：前缀（以什么开始）
--                 close: 后缀（以什么关闭）
--                  separator:分隔符
--                  item:循环中的每一个对象
--                   index：循环中的索引（一般不用）
        <foreach collection="array" open="uid in ("  close=")" separator="," item="id">
        #{id}

        </foreach>
    </delete>


    <delete id="delByList" parameterType="integer[]">
        delete from users where
          <foreach collection="list" open="uid in ("  close=")" separator="," item="id">
            #{id}

        </foreach>
    </delete>
</mapper>